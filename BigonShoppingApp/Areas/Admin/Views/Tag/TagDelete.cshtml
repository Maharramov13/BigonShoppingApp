@model Tag;


<div class="card-block">
    <h4 class="sub-title">Delete tag</h4>
    <form method="post">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">Tag name</label>
            <div class="col-sm-10">
                <input asp-for="Name" type="text" class="form-control" placeholder="Delete tag name">
            </div>
        </div>



        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">Tag</label>
            <div class="col-sm-10">
                <input asp-for="Id" type="tag" class="form-control">
            </div>
        </div>

        <button class="btn btn-primary">Submit</button>

    </form>

</div>